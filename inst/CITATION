year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite the sportsdataverse R package in publications, use:")

citEntry(entry = "Misc",
         author = personList(as.person("Saiem Gilani")),
         title = "sportsdataverse: The Set of R Packages for Sports Data.",
         url = c("https://r.sportsdataverse.org"),
         year = year,
         note = note,
         textVersion = paste(
    "Saiem Gilani. sportsdataverse: The Set of R Packages for Sports Data.",
    "Retrieved from https://r.sportsdataverse.org"
  )
)
